{
  "name": "house-of-spells-backend",
  "version": "1.0.0",
  "description": "Backend API for House of Spells e-commerce platform",
  "main": "src/index.js",
  "scripts": {
    "build": "prisma generate",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "prisma:generate": "prisma generate",
